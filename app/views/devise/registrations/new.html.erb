<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the pro account for $10/month and get access to the community, inMail, Contact and more!</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for free and get basic access to the community.</p>
        <% end %>
      </div>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <h2>Basic Sign Up Form</h2>
           <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
        </div><!-- well -->
    </div>
  </div>
</div>